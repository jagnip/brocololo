generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id      String   @id @default(cuid())
  name    String   @unique
  slug    String   @unique
  recipes Recipe[] @relation("CategoryToRecipe")

  @@map("categories")
}

model Recipe {
  id           String     @id @default(cuid())
  name         String     @unique
  slug         String     @unique
  imageUrl     String     @map("image_url")
  instructions String[]
  handsOnTime  Int        @map("hands_on_time")
  nutrition    String[]
  ingredients  String[]
  notes        String[]
  servings     Int
  categories   Category[] @relation("CategoryToRecipe")

  @@map("recipes")
}
